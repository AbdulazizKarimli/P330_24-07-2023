@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel

<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-5">
            <form method="post">
                <div class="login-form">
                    <h4 class="login-title">Login</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Username Or Email</label>
                            <input asp-for="UsernameOrEmail" placeholder="Username Or Email">
                            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label>Password</label>
                            <input asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-8">
                        <div class="check-box">
                          <input asp-for="RememberMe" />
                          <label for="RememberMe">Remember me</label>
                        </div>
                      </div>
                      <div class="col-md-4 pt-1 mt-md-0">
                        <div class="forgotton-password_info">
                          <a asp-action="ForgotPassword" > Forgotten pasward?</a>
                        </div>
                      </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                Login
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>